<Window x:Class="FTPClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FTPClient"
        mc:Ignorable="d"
		Title="LoginWindow" Height="150" Width="300" SizeToContent="Height"
		WindowStartupLocation="CenterOwner">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <TextBox x:Name="LoginTextBox" Width="200" Margin="0, 10, 0, 10" TextChanged="LoginTextBox_TextChanged" Text="" ToolTip="Имя пользователя"/>
        <PasswordBox x:Name="PasswordPasswordBox" Width="200" Margin="0, 0, 0, 10" PasswordChanged="PasswordPasswordBox_PasswordChanged" Password="" ToolTip="Пароль"/>
        <Button x:Name="LoginButton" Content="Войти" Margin="0, 0, 0, 10" Width="120" Click="LoginButton_Click" Loaded="LoginButton_Loaded"/>
    </StackPanel>
</Window>
